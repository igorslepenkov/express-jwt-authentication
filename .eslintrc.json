{
  "plugins": ["prettier"],
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["standard-with-typescript", "plugin:prettier/recommended"],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": ["./tsconfig.json"]
  },
  "rules": {
    "quotes": ["error", "double"],
    "prefer-const": "error",
    "indent": ["warn", 2, { "SwitchCase": 1 }],
    "max-len": ["error", { "code": 100 }],
    "semi": ["warn", "always"],
    "prettier/prettier": "error"
  }
}
